{
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "declaration": true,
    "outDir": "dist",
    "target": "ES2015",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": [ "@types/wicg-file-system-access", "gapi", "gapi.auth2", "google.accounts", "gapi.client.drive-v3"]
  },
  "include": [ "./src/**/*" ],
  "exclude": ["node_modules"]
}